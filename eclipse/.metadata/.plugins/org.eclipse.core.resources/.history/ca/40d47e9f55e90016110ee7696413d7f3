package escapemc.module.modules;

import org.lwjgl.input.Keyboard;

import escapemc.module.Category;
import escapemc.module.Module;
import net.minecraft.client.entity.EntityPlayerSP;
import net.minecraft.entity.Entity;
import net.minecraft.entity.EntityLivingBase;

public class KillauraFour extends Module {

	public KillauraFour() {

		super("Killaura", Keyboard.KEY_K, Category.COMBAT);
	
	}

	public static int Range = (int) 4.5;
	
	public Entity ClosestEntity() {
		
		Entity closest = null;
		for(Object o : mc.theWorld.loadedEntityList) {
			
			Entity e = (Entity) o;
			if(e instanceof EntityLivingBase && !e.isDead && !(e instanceof EntityPlayerSP) && mc.thePlayer.canEntityBeSeen(e) && !(e.getEntityId() < 1000000000)) {
				
				if(closest == null || mc.thePlayer.getDistanceToEntity(e) < mc.thePlayer.getDistanceSqToEntity(closest)) {
					
					closest = e;
					
				}
				
			}
			
		}

		return closest;
		
	}
	
	public Entity entity;
	public void Tick() {
		
		entity = ClosestEntity();
		if(entity != null) {
			
			if(entity.getDistanceSqToEntity(mc.pointedEntity))
			
		}
		
	}
	
}
