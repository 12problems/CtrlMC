package escapemc.module;

import escapemc.Event.Event;
import escapemc.Event.events.EventPacketReceive;
import net.minecraft.client.Minecraft;
import net.minecraft.network.play.server.SPacketChat;

public class Module {
		
		public Minecraft mc = Minecraft.getMinecraft();
		
		private String name;
		private int key;
		private boolean toggled;
		private Category category;
		private Mode mode;
		private boolean colorToggle;
		
		public Module(String nm, int k, Category c){
			name = nm;
			key = k;
			category = c;
			this.toggled = false;
			this.colorToggle = false;
		}
		
		public void toggle(){

			if(toggled == true){
				
				onDisable();
				this.setToggled(false);
				onUpdate();
				
			}else{
				
				onEnable();
				this.setToggled(true);
				onUpdate();
			}
		}
		
		public float partialTicks;
		
		public void onEnable(){}
		public void onDisable(){}
		public void onUpdate(){}
		public void onRender2D(float partialTicks) {}
		public void onRender3D() {}
		public void onToggle(){}
		public void Tick(){}
		public void Event(Event e){}

		public String getName() {
			return name;
		}

		public void setName(String name) {
			this.name = name;
		}
		
		public Category getCategory(){
			return category;
		}

		public int getKey() {
			return key;
		}

		public void setKey(int key) {
			this.key = key;
		}

		public final boolean isToggled() {
			return toggled;
		}
		
		public boolean getColorToggle() {
			
			return colorToggle;
			
		}
		
		public void setColorToggle(boolean colorToggle) {
			
			this.colorToggle = colorToggle;
			
		}

		public void setToggled(boolean toggled) {
			this.toggled = toggled;
		}
		
		public boolean onSendChatMessage(String s){
			return true;
		}
		
		public boolean onRecieveChatMessage(SPacketChat packet){
			return true;
		}

		public Mode getMode() {
			
			return mode;
			
		}
		
		public void setMode(Mode mode) {
			
			this.mode = mode;
			
		}

}