package escapemc.Command;

import escapemc.Util.ChatUtil;

public abstract class Command {

	public String Command;
	public String Syntax;
	public String Description;
	
	public abstract void onCommand(String command, String[] args) throws Exception;
	
	public Command(String cmd, String syntax, String desc) {
		
		Command = cmd;
		Syntax = syntax;
		Description = desc;
		
	}
	
	public abstract void Command(String[] command);
	
	public void Chat(String msg) {
		
		ChatUtil.SendChatMessage(msg);
		
	}
	
	public void syntax() {
		
		Chat(Syntax);
		
	}
	
}