package escapemc.Command.commands;

import org.lwjgl.input.Keyboard;

import escapemc.Command.Command;
import escapemc.module.Module;
import escapemc.module.ModuleManager;

public class CommandBind extends Command {

	public CommandBind() {

		super("bind", "-bind set [MOD] [Key] | -bind del [MOD] | -bind clear", "Sets keybind for a module.");
	
	}

	@Override
	public void Command(String[] args) {
		
		if(args[0].equalsIgnoreCase("set")){
			args[2] = args[2].toUpperCase();
			int key = Keyboard.getKeyIndex(args[2]);
			
			for(Module m: ModuleManager.Modules) {
				if(args[1].equalsIgnoreCase(m.getName())){
					m.setKey(Keyboard.getKeyIndex(Keyboard.getKeyName(key)));
					Chat(args[1] + " has been binded to " + args[2]);
				}
			}
			
		}else if(args[0].equalsIgnoreCase("del")){
			for(Module m: ModuleManager.Modules()){
				if(m.getName().equalsIgnoreCase(args[1])){
					m.setKey(0);
					Spyke.addChatMessage(args[1] + " has been unbinded");
				}
			}
		}else if(args[0].equalsIgnoreCase("clear")){
			for(Module m: Spyke.getModules()){
				m.setKey(0);
			}
			Spyke.addChatMessage("All keys cleared");
		}
	}
}
